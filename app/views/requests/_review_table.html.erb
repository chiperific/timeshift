<table class="table table-striped small-when-small">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th >Hrs</th>
      <th>Status</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% dr_to.each do |r| %>
      <tr>
        <td><%= r.user.fname+" "+r.user.lname %></td>
        <td><%= r.date.strftime("%m/%d/%y") %></td>
        <td><%= r.hours %></td>
        <td><%= r.status(r) %></td>
        <% if r.sv_approval == false %>
          </tr>
          <tr>
            <td colspan="3"></td>
            <td><%= link_to "Approve", "/users/#{r.user.supervisor_id}/requests/#{r.id}/approval_flow?approve=true&reviewed=true&review=#{params[:review]}&cur_usr=#{params[:cur_usr]}", { class: "pull-right btn btn-success"} %></td> 
            <td><%= link_to "Deny", "/users/#{r.user.supervisor_id}/requests/#{r.id}/approval_flow?approve=false&reviewed=true&review=#{params[:review]}&cur_usr=#{params[:cur_usr]}", { class: "btn btn-danger" } %></td>
        <% else %>
          <td><%= link_to "Deny", "/users/#{r.user.supervisor_id}/requests/#{r.id}/approval_flow?approve=false&reviewed=true&review=#{params[:review]}&cur_usr=#{params[:cur_usr]}", { class: "btn btn-danger" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>