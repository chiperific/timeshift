<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th >Hrs</th>
      <th>Submitted</th>
      <th class="small2">Approved?</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% dr_to.each do |r| %>
      <tr>
        <td class='small2'><%= r.user.fname+" "+r.user.lname %></td>
        <td class='small2'><%= r.date.strftime("%m/%d/%y") %></td>
        <td><%= r.hours %></td>
        <td class='small2'><%= r.updated_at.strftime("%m/%d/%y") %></td>
        <td><%= if r.sv_approval == true then "Yes" else "No" end %></td>
        <% if r.sv_approval == false %>
          </tr>
          <tr>
            <td colspan="3"></td>
            <td><%= link_to "Approve", "/users/#{r.user.supervisor_id}/requests/#{r.id}/approval_flow?approve=true&reviewed=true&review=#{params[:review]}&cur_usr=#{params[:cur_usr]}", { class: "small btn btn-primary"} %></td> 
            <td><%= link_to "Reject", "/users/#{r.user.supervisor_id}/requests/#{r.id}/approval_flow?approve=false&reviewed=true&review=#{params[:review]}&cur_usr=#{params[:cur_usr]}", { class: "small btn btn-primary" } %></td>
        <% else %>
          <td>
            <%= link_to "Deny", "/users/#{r.user.supervisor_id}/requests/#{r.id}/approval_flow?approve=false&reviewed=true&review=#{params[:review]}&cur_usr=#{params[:cur_usr]}", { class: "small btn btn-primary" } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>