<% if @dr_requests.any? %>
  <% if @dr_review_switch == "false" %>
    <h4>Unreviewed Time Off Requests</h4>
    <% if @dr_requests_unreviewed.any? %>
      <%= render 'review_table', dr_to: @dr_requests_unreviewed %>
    <% else %>
      <p>There are no unreviewed time off requests from your staff.</p>
    <% end %>
    <%= link_to "View Reviewed", "?cur_usr=false&review=true", { class: "btn btn-primary" } %>
  <% end %>

  <% if @dr_review_switch == "true" %>
    <h4>Reviewed Time Off Requests</h4>
    <% if @dr_requests_reviewed.any? %>
      <%= render 'review_table', dr_to: @dr_requests_reviewed %>
    <% else %>
      <p>There are no reviewed time off requests from your staff.</p>
    <% end %>
    <%= link_to "View Unreviewed", "?cur_usr=false&review=false", { class: "btn btn-primary" } %>
  <% end %>
<% end %>

<% if @dr_cur_usr_switch == "false" %>
    <%= link_to "View Your requests", "?cur_usr=true", { class: "btn btn-primary pull-right" } %>
    <br>
<% end %>

<% if @dr_cur_usr_switch == "true" %>
  <% if @user.requests.any? %>
    <%= render 'self_table' %>
  <% else %>
    <h4><%= @user.fname %> has no time off requests on file</h4>
  <% end %>
  <div><%= link_to "Create request", new_user_request_path(params[:user_id]), { class: "btn btn-success" } %>
    <% if  @dr_requests.any? %>
      <%= link_to "Your staff's requests", "?cur_usr=false&review=false", { class: "btn btn-primary pull-right"} %><br>
    <% end %>
  </div>
<% end %>