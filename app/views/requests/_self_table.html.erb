<h4><%= @user.fname %>'s Time Off Requests</h4>
<table class="table small-when-small">
  <thead>
    <tr>
      <th>Date</th>
      <th>Hrs</th>
      <th>Status</th>
    </tr>
  </thead>
  <tbody>
    <% @requests.each do |r| %>
      <tr>
        <td class="small2"><%= r.date.strftime("%m/%d/%y") %></td>
        <td><%= r.hours %></td>
        <td class="<%= r.notice_class(r) %>"><%= r.status(r) %></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
        <td>
          <%= link_to "Edit", edit_user_request_path(@user.id, r.id) , { class: "btn btn-primary" } %>
          &nbsp
          <%= link_to "Cancel", user_request_path(@user.id, r.id), { method: :delete, class: "btn btn-danger" } %></td>
      </tr>
    <% end %>
  </tbody>
</table>