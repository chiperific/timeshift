<div>
  <table class="table table-striped table-center" id="timeoff-table">
    <thead class="subtle">
      <tr>
        <td>
          <%= icon('user fa-2x') %>
          <p>User</p>
        </td>
        <td>
          <%= icon('calendar fa-2x') %>
          <p>Date</p>
        </td>
        <td>
          <%= icon('minus-square-o fa-2x') %>
          <p>Time off</p>
        </td>
        <td class="hidden-xs">
          <%= icon('toggle-up fa-2x') %>
          <p>Submitted</p>
        </td>
        <td>
          <%= icon('check-square-o fa-2x') %>
          <p>Approved</p>
        </td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @timeoff_hours.each do |toh| %>
        <% t = toh.timesheet %>
        <tr>
          <td><%= toh.user.full_name %></td>
          <td><%= t.week_num_to_date %></td>
          <td><%= t.timesheet_hours.where(user_id: toh.user.id).sum(:timeoff_hours) %></td>
          <td class="hidden-xs"><%= toh.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= toh.status %></td>
          <td><%= link_to FA_EDIT, edit_user_timesheet_path( toh.user.id, t.id), class: "btn btn-primary btn-sm" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>