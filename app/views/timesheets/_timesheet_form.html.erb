<%= form_for [@user, @timesheet], { class: "form-inline"} do |t_form| %>
  <%= render 'shared/error_messages', object: t_form.object %>
  <div class="row form-group">
    <div class="col-xs-6">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
        <%= text_field_tag "week_num_to_date", @timesheet_date.strftime("%m/%d"), { class: "form-control readonly-disguiser", readonly: true } %>
      </div>
      <%= t_form.number_field :week_num, { class: "hidden", value: @timesheet.week_num || @timesheet_date.cweek } %>
    </div>
    <div class="col-xs-6">
      <div class="input-group">
        <span class="input-group-addon"><i class="fa fa-calendar-o"></i></span>
        <%= t_form.number_field :year, { class: "form-control readonly-disguiser", value: @timesheet.year || @timesheet_date.strftime('%Y'), readonly: true } %>
      </div>
    </div>
  </div>

  <div class="row form-group">

    <fieldset class="col-xs-6 span-no-padding-both" id="hours_fieldset">
      <legend>Hours:</legend>
        <% @timesheet_hours.each_with_index do |timesheet_hour, index| %>
          <%= t_form.fields_for "timesheet_hours[#{index}]", timesheet_hour do |th_form| %>
            <span class="col-xs-6">
              <span class="pull-right plus-r-padding">
                <%= timesheet_hour.day_name(index+1) %>
              </span>
            </span>
            <%= th_form.number_field :weekday, {class: "hidden", value: index+1 } %>
            <span class="col-xs-6">
              <%= th_form.number_field :hours, {class: "form-control" } %>
            </span>
          <% end %>
        <% end %>
    </fieldset>
    
    <fieldset class="col-xs-6 span-no-padding-both" id="categories_fieldset">
      <legend>Categories:</legend>
      <% @timesheet_categories.each_with_index do |timesheet_category, index| %>
        <%= t_form.fields_for "timesheet_categories[#{index}]", timesheet_category do |tc_form| %>
          <span class="col-xs-7">
            <span class="pull-right plus-r-padding wrapped-and-right">
              <%= timesheet_category.category.name %>
            </span>
          </span>
          <%= tc_form.number_field :category_id, { class: "hidden" } %>
          <span class="col-xs-5">
            <%= tc_form.number_field :hours, { class: "form-control" } %>
          </span>
        <% end %>
      <% end %>
    </fieldset>
  
  </div>
  <div class="row center">
    <%= t_form.submit "Submit", class: "btn btn-success" %>
  </div>

<% end %>