<h4 class="center">Recent Timesheets for <%= @user.fname %></h4>
<div id="recent-timesheets">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>TTL Hrs</th>
        <th>Submitted</th>
        <th>Approved</th>
      </tr>
    </thead>
    <tbody>
      <% @user_timesheet_hours.each do |th| %>
        <% t = th.timesheet %>
        <tr>
          <td><%= t.week_num_to_date(t.week_num, t.year) %></td>
          <td><%= t.timesheet_hours.pluck(:hours).inject(0) {|sum, i| sum + i} %></td>
          <td><%= th.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= if th.approved then th.approved.strftime("%m/%d/%Y") else "No" end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
