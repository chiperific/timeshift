<h4 class="center"><%= @user_or_self %></h4>
<div id="recent-timesheets">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Date</th>
        <th>Hrs</th>
        <th>Submitted</th>
        <th>Approved</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @timesheets.each do |th| %>
        <% t = th.timesheet %>
        <tr>
          <td><%= t.week_num_to_date(t.week_num, t.year) %></td>
          <td><%= t.timesheet_hours.pluck(:hours).inject(0) {|sum, i| sum + i} %></td>
          <td><%= th.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= if th.approved then th.approved.strftime("%m/%d/%Y") else "No" end %></td>
          <td><a href="#">Edit</a></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="center">
    <%= will_paginate @timesheets, renderer: BootstrapPagination::Rails %>
  </div>

</div>
