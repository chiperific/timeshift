<div id="recent-timesheets">
  <table class="table table-striped table-center">
    <thead class="subtle">
      <tr>
        <td>
          <%= icon('calendar fa-2x') %>
          <p>Date</p>
        </td>
        <td>
          <%= icon('clock-o fa-2x') %>
          <p>Hours</p>
        </td>
        <td>
          <%= icon('times-circle-o fa-2x') %>
          <p class='hidden-xs'>Time off</p>
          <p class='visible-xs-block'>Off</p>
        </td>
        <td class="hidden-xs">
          <%= icon('toggle-up fa-2x') %>
          <p>Submitted</p>
        </td>
        <td>
          <%= icon('check-square-o fa-2x') %>
          <p>Approved</p>
        </td>
        <td></td>
      </tr>
    </thead>
    <tbody>
      <% @timesheet_hours.each do |th| %>
        <% t = th.timesheet %>
        <tr>
          <td><%= t.week_num_to_date %></td>
          <td><%= t.timesheet_hours.where(user_id: th.user.id).pluck(:hours).inject(0) {|sum, i| sum + i} %></td>
          <td><%= t.timesheet_hours.where(user_id: th.user.id).pluck(:timeoff_hours).inject(0) {|sum, i| sum + i} %></td>
          <td class="hidden-xs"><%= th.created_at.strftime("%m/%d/%Y") %></td>
          <td><%= th.status %></td>
          <td><%= link_to FA_EDIT, edit_user_timesheet_path( @user.id, t.id), class: "btn btn-primary" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <div class="center">
    <%= will_paginate @timesheet_hours, renderer: BootstrapPagination::Rails %>
  </div>

  <div class="buffered-row">
    <%= link_to FA_NEW, new_user_timesheet_path(@user.id), { class: "btn btn-success"} %>
  </div>

</div>