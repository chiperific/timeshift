<div class="col-xs-12 col-sm-6">  
  <h3 class="subtle">Weekdays</h3>

  <div class="form-group">
    <table id="weekday_form">
      <thead>
        <tr class="row">
          <th class="col-xs-2">Order</th>
          <th class="col-xs-6">Day name</th>
          <th class="col-xs-3">Abbr.</th>
          <th class="col-xs-1"></th>
        </tr>
      </thead>
      <tbody>
        <%= form_for :weekday do |f| %>
          <tr class="row form-controller">
            <td class="min-padding-both">
              <%= f.number_field :day_num, { class: "form-control"} %>
            </td>
            <td class="min-padding-both">
              <%= f.text_field :name, { class: "form-control"} %>
            </td>
            <td class="min-padding-both">
              <%= f.text_field :abbr, { class: "form-control"} %>
            </td>
            <td>
              <%= icon('times') %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>