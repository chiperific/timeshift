<div class="row">
  <h3 class="col-xs-8 col-md-8 col-lg-8 subtle">Categories</h3>
  <div class="col-xs-4 col-md-4 col-lg-4">
    <%= link_to "Go to departments", departments_path, {class: "pull-right btn btn-info btn-xs"} %>
  </div>
</div>
  
<div id="active-cats">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dept.</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cats_active.sort_by { |c| c.name }.each do |c| %>
        <tr>
          <td><%= c.name %></td>
          <td><%= c.department.name %></td>
          <td class="center"><%= link_to FA_EDIT, edit_category_path(c.id), { class: "btn btn-primary"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% if @cats_inactive.count > 0 %>
  <%= link_to "View inactive categories", "#", {id: "cat-view-switch", class: "pull-right btn btn-primary btn-xs"} %>
<% end %>
<div class="hidden" id="inactive-cats">
  <table class="table">
    <thead>
      <tr>
        <th>Inactive categories</th>
        <th>Depts.</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cats_inactive.each do |c| %>
        <% @dept_for_cat = Department.find(c.department_id) %>
        <tr>
          <td><%= c.name %></td>
          <td><%= @dept_for_cat.name %></td>
          <td><%= link_to FA_EDIT, edit_category_path(c.id), { class: "btn btn-primary"} %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<p><%= link_to FA_NEW, new_category_path, { class: "btn btn-success"} %></p>