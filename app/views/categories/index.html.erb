<div class="row">
  <h3 class="col-xs-6 col-md-6 col-lg-6">Current Categories</h3>
  <div class="col-xs-6 col-md-6 col-lg-6">
    <%= link_to "go to departments", departments_path, {class: "pull-right"} %>
  </div>
</div>
  
<div id="active-cats">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dept.</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cats_active.sort_by { |c| c.name }.each do |c| %>
        <% @dept_for_cat = Department.find(c.department_id) %>
        <tr>
          <td><%= c.name %></td>
          <td><%= @dept_for_cat.name %></td>
          <td><%= link_to "Edit", edit_category_path(c.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<% if @cats_inactive.count > 0 %>
  <%= link_to "View inactive categories", "#", {id: "cat-view-switch", class: "pull-right"} %>
<% end %>
<div class="hidden" id="inactive-cats">
  <table class="table">
    <thead>
      <tr>
        <th>Inactive categories</th>
        <th>Depts.</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <% @cats_inactive.each do |c| %>
        <% @dept_for_cat = Department.find(c.department_id) %>
        <tr>
          <td><%= c.name %></td>
          <td><%= @dept_for_cat.name %></td>
          <td><%= link_to "Edit", edit_category_path(c.id) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<p><%= link_to "Add new category", new_category_path %></p>